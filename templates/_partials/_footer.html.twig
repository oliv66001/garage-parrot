<div class="container my-5">
   <h2 class="text-center">Horaires d'ouverture du garage</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>Jour</th>
                    <th>Ouverture Matin</th>
                    <th>Fermeture Matin</th>
                    <th>Ouverture Après-Midi</th>
                    <th>Fermeture Après-Midi</th>
                </tr>
            </thead>
            <tbody>
                {% for hours in business_hours %}
                    <tr class="text-center">
                        <td>{{ hours.day }}</td>
                        <td>
                            {% if hours.openTimeMorning is not null %}
                                {{ hours.openTimeMorning }}
                            {% else %}
                                Fermé
                            {% endif %}
                        </td>
                        <td>
                            {% if hours.closedTimeMorning is not null %}
                                {{ hours.closedTimeMorning }}
                            {% else %}
                                Fermé
                            {% endif %}
                        </td>
                        <td>
                            {% if hours.openTimeAfternoon is not null %}
                                {{ hours.openTimeAfternoon }}
                            {% else %}
                                Fermé
                            {% endif %}
                        </td>
                        <td>
                            {% if hours.closedTimeAfternoon is not null %}
                                {{ hours.closedTimeAfternoon }}
                            {% else %}
                                Fermé
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
		
    </div>
