<section class="container">
	<div class="row justify-content-center">
		<div class="col">
			{{ form_start(categoryRepairForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
			<div class="mt-3">
			{{ form_row(categoryRepairForm.name) }}
			</div>
			{% if app.request.attributes.get('_route') == 'admin_category_repair_edit' %}
				<h2 class="text-center mt-3">Images</h2>
				<div class="mb-3">
				{% for image in categoryRepair.image %}
						<div>
							
							<img src=" {{ asset('assets/uploads/vehicle/mini/300x300-' ~ image.name) }} " alt=" {{ categoryRepair.name }} " width="150">
							<a class="btn" href=" {{ path('admin_category_repair_delete_image', {id: image.id, 'deleteVehicle': false})}} " data-delete data-type="image" data-token=" {{ csrf_token('delete' ~ image.id) }} ">Supprimer</a>
						</div>
						
					{% endfor %}


				{% endif %}
				
				{{ form_row(categoryRepairForm.image) }}
				
			<div>
				<button class="btn btn mt-3" type="submit">
					{{ button_label | default ('Ajouter') }}
				</button>
			</div>
			{{ form_end(categoryRepairForm) }}

		</div>
	</div>
</section>
