{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

<div class="row">
    {% for category in categories %}
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <img class="card-img-top" src="{{ asset('path/to/your/image') }}" alt="{{ category.name }}">
            <div class="card-body">
                <h4 class="card-title">{{ category.name }}</h4>
                <a href="{{ path('repairs_by_category', {'id': category.id}) }}" class="btn btn-primary">Voir les réparations</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
