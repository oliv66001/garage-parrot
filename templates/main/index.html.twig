{% extends 'base.html.twig' %}

{% block title %}Page d'accueil
{% endblock %}

{% block body %}
	<main class="container-fluid mb-5">
		<div class="row">
			<div class="col-12">
				
				<div id="demo">
				{% set isRealImageShown = false %}
					{% for vehicle in vehicles %}
						{% if vehicle.images is defined and vehicle.images|length > 0 %}
							{% set image = vehicle.images[0] %}
							<div>
								<img src="{{ asset('assets/uploads/vehicle/' ~ image.name) }}" alt="{{ vehicle.brand }}" style="width:700px; height: 500px" class="img-fluid">
							</div>
						{% endif %}
					{% endfor %}
					{% if not isRealImageShown %}
						{% for vehicle in vehicles %}
							{% if vehicle.image %}
								<div>
									<img src="{{ vehicle.image }}" alt="{{ vehicle.brand }}" style="width:700px; height: 500px" class="img-fluid">
								</div>
							{% endif %}
						{% endfor %}
					{% endif %}
				</div>

		</div>
	</div>

</main>
