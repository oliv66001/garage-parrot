<section class="container">
	<div class="row">
	<h1 class="text-center">Service réparation</h1>
		{% for category in categories %}
			<div class="col-lg-4 col-md-6 mb-4"></br>
				<div class="card h-100">
					{% if category.image %}
						<img class="card-img-top" src="{{ asset('assets/uploads/vehicle/mini/300x300-' ~ category.image.name) }}" alt="{{ category.name }}">
					{% else %}
						<img class="card-img-top" src="{{ asset('assets/image/Garage.png') }}" alt="{{ category.name }}">
					{% endif %}

					<div class="card-body">
						<h4 class="card-title">{{ category.name }}</h4>
						<a href="{{ path('repairs_by_category', {'id': category.id}) }}" class="btn btn-primary">Voir les réparations</a>
					</div>
				</div>
			</div>
		{% endfor %}
		
	</div>
	<hr class="mt-3 mb-3">
</section>
